<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woniuxy.reader.mapper.ChapterMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.woniuxy.reader.entity.Chapter">
        <id column="chapter_id" property="chapterId" />
        <result column="chapter_name" property="chapterName" />
        <result column="content" property="content" />
        <result column="word_number" property="wordNumber" />
        <result column="book_id" property="bookId" />
        <result column="amount" property="amount" />
        <result column="update_time" property="updateTime" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        chapter_id, chapter_name, content, word_number, book_id, amount, update_time, status
    </sql>

</mapper>
